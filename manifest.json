{
  "manifest_version": 3,
  "name": "LockIn - Social Media Blocker",
  "version": "1.0.0",
  "description": "Block social media sites to stay focused and productive",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "browsingData",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-blocking": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle social media blocking on/off"
    }
  },
  "host_permissions": [
    "*://facebook.com/*",
    "*://*.facebook.com/*",
    "*://twitter.com/*",
    "*://*.twitter.com/*",
    "*://x.com/*",
    "*://*.x.com/*",
    "*://instagram.com/*",
    "*://*.instagram.com/*",
    "*://tiktok.com/*",
    "*://*.tiktok.com/*",
    "*://reddit.com/*",
    "*://*.reddit.com/*",
    "*://youtube.com/*",
    "*://*.youtube.com/*",
    "*://snapchat.com/*",
    "*://*.snapchat.com/*",
    "*://linkedin.com/*",
    "*://*.linkedin.com/*",
    "*://pinterest.com/*",
    "*://*.pinterest.com/*",
    "*://tumblr.com/*",
    "*://*.tumblr.com/*",
    "*://discord.com/*",
    "*://*.discord.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/locked16.png",
      "48": "icons/locked48.png",
      "128": "icons/locked128.png"
    }
  },
  "icons": {
    "16": "icons/locked16.png",
    "48": "icons/locked48.png",
    "128": "icons/locked128.png"
  }
}
