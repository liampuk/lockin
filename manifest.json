{
  "manifest_version": 3,
  "name": "LockIn - Social Media Blocker",
  "version": "1.0.0",
  "description": "Block social media sites to stay focused and productive",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "browsingData",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "commands": {
    "enable-blocking": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Enable social media blocking"
    },
    "disable-blocking": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "MacCtrl+Shift+K"
      },
      "description": "Disable social media blocking"
    }
  },
  "host_permissions": [
    "*://*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/locked16.png",
      "48": "icons/locked48.png",
      "128": "icons/locked128.png"
    }
  },
  "icons": {
    "16": "icons/locked16.png",
    "48": "icons/locked48.png",
    "128": "icons/locked128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/unlocked16.png",
        "icons/unlocked48.png",
        "icons/unlocked128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
